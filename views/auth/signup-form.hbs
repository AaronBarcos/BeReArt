<div id="home" class="container">
    <div class="row align-items-start">
        <div id="texto-home" class="col align-self-start">
            <img id="logo-home" class="row align-items-start" src="../images/bereart-logo-blanco.png" alt="logo-bereart"
                width="400px">
            <p class="fs-8 mb-4">Proyecto realizado por Aaron y Alberto</p>
            <p class="fs-1 mb-4">Copia a los mejores.
                <br>
                Crea tu obra de arte.
            </p>

            <p class="fs-5">¿Ya te has registrado?</p>
            <button class="btn btn-info">
                <a class="anchor-registro" href="/auth/signup">
                    Inicia sesión
                </a>
            </button>


        </div>
        <div class="col" class="p-3 mb-2 bg-white text-black">


            <div id="form-registro">
                <form class="form-horizontal" action="/auth/signup" method="post">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="text">Username:</label>
                        <div class="col-sm-10">
                            <input type="text" name="username" class="form-control" id="text"
                                placeholder="¿Van Gogh, Piccaso? Elige el tuyo.">
                        </div>
                        <br>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Email:</label>
                        <div class="col-sm-10">
                            <input type="email" name="email" class="form-control" id="autor"
                                placeholder="Aquí tu correo electrónico...">
                        </div>
                        <br>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="password">Contraseña:</label>
                            <div class="col-sm-10">
                                <input type="password" name="password" class="form-control" id="password"
                                    placeholder="Añade una contraseña segura...">
                            </div>
                            <br>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="ubication">Ubicación:</label>
                                <div class="col-sm-10">
                                    <input type="text" name="ubication" class="form-control" id="ubication"
                                        placeholder="Añade la ciudad en la que resides...">
                                </div>
                                <br>
                            </div>
                            <br>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" class="btn btn-success">Crear usuario</button>
                                </div>
                            </div>

                </form>
                <br>

                {{#if this.errorMessage}}
                <div class="alert alert-danger" role="alert">
                    {{this.errorMessage}}
                </div>
                {{/if}}


            </div>
        </div>
    </div>

</div>